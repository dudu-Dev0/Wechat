<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="6dp"
        android:layout_gravity="top|center">

        <TextClock
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:format12Hour="hh:mm"
            android:format24Hour="hh:mm"
            android:textSize="16sp"
            android:layout_gravity="end" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/globalGreen"
            android:id="@+id/title"
            android:textStyle="bold"
            android:text="屏幕类型"
            android:layout_gravity="start" />

    </FrameLayout>

    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/chip_background_medium"
                    android:clickable="true"
                    android:layout_marginHorizontal="12dp"
                    android:id="@+id/square_screen_card">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginVertical="6dp"
                        android:textSize="10sp"
                        android:text="矩形屏幕"
                        android:layout_gravity="center|start" />

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:id="@+id/square_screen_radio"
                        android:layout_gravity="center|end"
                        android:text=""
                        android:clickable="false" />

                </FrameLayout>

                <FrameLayout
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_marginVertical="4dp"
                    android:background="@drawable/chip_background_medium"
                    android:clickable="true"
                    android:layout_marginHorizontal="8dp"
                    android:id="@+id/round_screen_card">

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginVertical="6dp"
                        android:textSize="10sp"
                        android:text="圆形屏幕"
                        android:layout_gravity="center|start" />

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="14dp"
                        android:id="@+id/round_screen_radio"
                        android:layout_gravity="center|end"
                        android:text=""
                        android:clickable="false" />

                </FrameLayout>

            </LinearLayout>

            <ImageButton
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:src="@drawable/icon_done"
                android:background="@drawable/round_button_green"
                android:id="@+id/done_btn"
                android:layout_gravity="center|bottom" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>