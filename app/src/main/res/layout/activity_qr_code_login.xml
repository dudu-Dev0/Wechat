<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextClock
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:format12Hour="hh:mm"
            android:format24Hour="hh:mm"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/globalGreen"
            android:textStyle="bold"
            android:text="扫码登录"
            android:layout_gravity="start" />
    </FrameLayout>
    <FrameLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center">
        <ProgressBar
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:indeterminateTint="@color/globalGreen"
            android:layout_gravity="center" />
        <com.google.android.material.card.MaterialCardView
            android:layout_height="140dp"
            android:layout_width="140dp"
            android:visibility="invisible"
            app:strokeColor="#00000000"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="20dp"
            app:cardForegroundColor="#00000000"
            android:id="@+id/qr_code_card">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/qr_code_view" />

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
    
    <TextView
        android:id="@+id/login_tip_tv"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/textColorDarker"
        android:text="请使用手机微信扫码登录"
        android:layout_gravity="center" />

</LinearLayout>
